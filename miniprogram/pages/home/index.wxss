.home-container
{
}
.home-container .scroll-view-item
{
    margin: 12rpx 8rpx;
    padding: 8rpx;

    border: 1rpx solid #D9D9D9;

}
.scroll-view-item .item-title
{
    margin: 0px 10rpx;
    padding: 0px 8rpx;
    min-height: 2.58823529em;
    line-height: 2.58823529em;
        
    border-bottom: 1rpx solid #D9D9D9;
}
.scroll-view-item .item-content
{
    margin: 10rpx 10rpx 0rpx 10rpx;
    padding: 0px 8rpx;
    /* line-height: 2.58823529em; */
    min-height: 2.58823529em;
}
.scroll-view-item .item-content image
{
    width: 100%;
}
.scroll-view-item .item-users
{
    display: flex;
    margin: 0rpx 8rpx 8rpx 8rpx;
    padding: 0px 8rpx;
    min-height: 2.58823529em;
    line-height: 2.58823529em;
}
.scroll-view-item .users-img
{
    width: 80rpx;
    height: 80rpx;
        
    padding: 8rpx;
    border: 1rpx solid #D9D9D9;
    border-radius: 50%;
}
.scroll-view-item .item-users image
{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
